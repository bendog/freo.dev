# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
charset = utf-8

# 4 space indentation
[*.{py,ini,md}]
indent_size = 4
max_line_length = 120

# 2 space indentation
[*.{js,jsx,json}]
indent_size = 2

[*.{css,html}]
indent_size = 2
